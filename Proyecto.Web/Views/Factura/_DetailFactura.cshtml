@model IEnumerable<Proyecto.Application.DTOs.FacturaDetalleDTO>


<div class="table-responsive">
<table class="table table-striped table-hover table-bordered text-center" id="detalleFactura">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdFactura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Secuencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdNFT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalLinea)
            </th>
            <th></th>
        </tr>
    </thead>
        <tbody>
            @{
                if (Model != null)
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td align="center">
                                @Html.DisplayFor(modelItem => item.IdFactura)
                            </td>
                            <td align="center">
                                @Html.DisplayFor(modelItem => item.Secuencia)
                            </td>
                            <td align="left">
                                @Html.DisplayFor(modelItem => item.DescripcionProducto)
                            </td>
                            <td align="right">
                                @Html.DisplayFor(modelItem => item.IdNFT)
                            </td>
                            <td align="right">
                                @Html.DisplayFor(modelItem => item.Cantidad)
                            </td>
                            <td align="right">
                                @Html.DisplayFor(modelItem => item.Precio)
                            </td>
                            <td align="right">
                                @Html.DisplayFor(modelItem => item.TotalLinea)
                            </td>
                            <td align="right">
                                <button type="button" class="btn btn-danger" onclick="deleteProduct(@item.Secuencia)">Borrar</button>
                            </td>
                        </tr>
                    }
                <!-- Add dummy row in order to show totals-->
                <tr>
                    <td align="center">
                    </td>
                    <td align="center">
                    </td>
                    <td align="left">
                    </td>
                    <td align="right">
                    </td>
                    <td align="right">
                    </td>
                    <td align="right">
                    </td>
                    <td align="right">
                        @{
                            if (Model != null)
                                @Model.Sum(p => p.TotalLinea).ToString("###,###.00")
                        }

                    </td>
                    <td align="right">
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
